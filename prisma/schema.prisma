// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String?
  password   String?   // hashed password if you implement auth
  company    Company?  @relation(fields: [companyId], references: [id])
  companyId  Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Company {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  users       User[]
  projects    Project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Project {
  id          Int       @id @default(autoincrement())
  company     Company   @relation(fields: [companyId], references: [id])
  companyId   Int
  name        String
  description String?
  cameras     Camera[]
  images      Image[]
  models      ModelRecord[]
  datasets    Dataset[]
  trainingJobs TrainingJob[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Camera {
  id         Int      @id @default(autoincrement())
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  Int
  name       String
  url        String   // e.g., http://192.168.141.208:8080/video
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Image {
  id           Int       @id @default(autoincrement())
  project      Project   @relation(fields: [projectId], references: [id])
  projectId    Int
  originalUrl  String    // S3/Storage URL
  annotatedUrl String?   // S3 URL of image with boxes
  uploadedBy   Int?      // optional user id
  detections   Detection[]
  dataset      Dataset?  @relation(fields: [datasetId], references: [id])
  datasetId    Int?
  createdAt    DateTime  @default(now())
}

model Detection {
  id         Int      @id @default(autoincrement())
  image      Image    @relation(fields: [imageId], references: [id])
  imageId    Int
  className  String
  confidence Float
  x          Float
  y          Float
  width      Float
  height     Float
  model      ModelRecord? @relation(fields: [modelId], references: [id])
  modelId    Int?
  createdAt  DateTime @default(now())
}

model ModelRecord {
  id            Int      @id @default(autoincrement())
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     Int
  name          String
  description   String?
  version       String
  path          String   // S3/URL where model files are stored, or docker image
  createdAt     DateTime @default(now())
  detections    Detection[]
  trainingJobs  TrainingJob[]
}

model Dataset {
  id         Int       @id @default(autoincrement())
  project    Project   @relation(fields: [projectId], references: [id])
  projectId  Int
  name       String
  images     Image[]   // relation to Image
  status     String    @default("pending") // pending, labeling, ready, training, completed, failed
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  trainingJobs TrainingJob[]
}

model TrainingJob {
  id         Int       @id @default(autoincrement())
  project    Project   @relation(fields: [projectId], references: [id])
  projectId  Int
  dataset    Dataset?  @relation(fields: [datasetId], references: [id])
  datasetId  Int?
  model      ModelRecord? @relation(fields: [modelId], references: [id])
  modelId    Int?
  status     String    @default("queued") // queued, running, success, failed
  logs       String?   // store logs or S3 url to logs
  startedAt  DateTime?
  finishedAt DateTime?
  createdAt  DateTime  @default(now())
}
